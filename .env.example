# ============================================
# MYSQL - users-api
# ============================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=users_db
MYSQL_USER=spotly_user
MYSQL_PASSWORD=spotly_password
DB_HOST=mysql
DB_PORT=3306

# ============================================
# MONGODB - properties-api
# ============================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=adminpassword
MONGO_INITDB_DATABASE=properties_db
MONGO_URI=mongodb://admin:adminpassword@mongodb:27017

# ============================================
# RABBITMQ
# ============================================
RABBITMQ_DEFAULT_USER=spotly
RABBITMQ_DEFAULT_PASS=spotly_password
RABBITMQ_URL=amqp://spotly:spotly_password@rabbitmq:5672/
RABBITMQ_QUEUE=property_events

# ============================================
# JWT
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# ============================================
# SOLR
# ============================================
SOLR_URL=http://solr:8983/solr
SOLR_CORE=properties

# ============================================
# MEMCACHED
# ============================================
MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211

# ============================================
# MICROSERVICES URLS
# ============================================
USERS_API_URL=http://users-api:8080
PROPERTIES_API_URL=http://properties-api:8081
SEARCH_API_URL=http://search-api:8082

# ============================================
# SERVER PORTS
# ============================================
USERS_API_PORT=8080
PROPERTIES_API_PORT=8081
SEARCH_API_PORT=8082
FRONTEND_PORT=3000

# ============================================
# CACHE
# ============================================
CACHE_TTL=300
LOCAL_CACHE_SIZE=1000

# ============================================
# FRONTEND (React)
# ============================================
REACT_APP_USERS_API_URL=http://localhost:8080
REACT_APP_PROPERTIES_API_URL=http://localhost:8081
REACT_APP_SEARCH_API_URL=http://localhost:8082
